cat > .gitignore << 'EOF'
# Byte-compiled / optimized / DLL files
__pycache__/
*.py[cod]
*$py.class

# Virtual environments
venv/
env/
.venv/

# IDEs
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db

# Distribution / packaging
build/
dist/
*.egg-info/

# pytest
.pytest_cache/

# Coverage reports
htmlcov/
.coverage

# Environment variables
.env
EOF